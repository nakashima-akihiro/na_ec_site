<div class="min-h-screen bg-gradient-to-br from-gray-50 via-white to-orange-50 pt-24 pb-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl mx-auto">
    <!-- ヘッダーセクション -->
    <div class="text-center mb-8">
      <div class="flex justify-center mb-4">
        <div class="w-16 h-16 bg-gradient-to-br from-orange-500 to-red-500 rounded-full flex items-center justify-center shadow-lg">
          <i class="fa-solid fa-cart-shopping text-white text-2xl"></i>
        </div>
      </div>
      <h1 class="text-3xl font-bold text-gray-900 mb-2">ショッピングカート</h1>
    </div>

    <% if @cart_items.count == 0 %>
      <!-- 空のカート -->
      <div class="bg-white rounded-2xl shadow-xl p-12 border border-gray-100 text-center">
        <div class="mb-6">
          <i class="fa-solid fa-cart-arrow-down text-6xl text-gray-300"></i>
        </div>
        <h2 class="text-2xl font-bold text-gray-900 mb-4">買い物かごは空です</h2>
        <p class="text-gray-600 mb-8">お気に入りの商品をカートに追加してください</p>
        <%= link_to products_path, class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-orange-500 to-red-500 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200" do %>
          <i class="fa-solid fa-pizza-slice mr-2"></i>
          商品を探す
        <% end %>
      </div>
    <% else %>
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 lg:gap-8">
        <!-- カートアイテム一覧 -->
        <div class="lg:col-span-2 space-y-4">
          <% @cart_items.each do |cart_item| %>
            <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-100 hover:shadow-xl transition-shadow duration-200">
              <div class="flex flex-col sm:flex-row gap-4">
                <!-- 商品画像 -->
                <div class="flex-shrink-0">
                  <%= link_to product_path(cart_item.product), class: "block" do %>
                    <div class="w-24 h-24 sm:w-32 sm:h-32 rounded-lg overflow-hidden bg-gray-100">
                      <%= image_tag cart_item.product.image, class: "w-full h-full object-cover" %>
                    </div>
                  <% end %>
                </div>

                <!-- 商品情報 -->
                <div class="flex-1 flex flex-col justify-between">
                  <div>
                    <%= link_to product_path(cart_item.product), class: "hover:text-orange-600 transition-colors" do %>
                      <h3 class="text-lg font-semibold text-gray-900 mb-2"><%= cart_item.product.name %></h3>
                    <% end %>
                    <p class="text-sm text-gray-500 mb-2">
                      <i class="fa-solid fa-box mr-1"></i>
                      在庫: <%= cart_item.product.stock %>個
                    </p>
                    <p class="text-xl font-bold text-gray-900">
                      <%= number_to_currency(cart_item.product.price, unit: "¥", strip_insignificant_zeros: true) %>
                    </p>
                  </div>

                  <!-- 数量調整と削除 -->
                  <div class="flex items-center justify-between mt-4 pt-4 border-t border-gray-200">
                    <div class="flex items-center space-x-3">
                      <%= link_to decrease_cart_item_path(cart_item), data: { "turbo-method": :patch }, class: "w-8 h-8 flex items-center justify-center rounded-full bg-gray-100 hover:bg-gray-200 text-gray-700 transition-colors" do %>
                        <i class="fa-solid fa-minus text-xs"></i>
                      <% end %>
                      <span class="text-lg font-semibold text-gray-900 w-8 text-center"><%= cart_item.quantity %></span>
                      <% unless cart_item.quantity >= cart_item.product.stock %>
                        <%= link_to increase_cart_item_path(cart_item), data: { "turbo-method": :patch }, class: "w-8 h-8 flex items-center justify-center rounded-full bg-orange-100 hover:bg-orange-200 text-orange-600 transition-colors" do %>
                          <i class="fa-solid fa-plus text-xs"></i>
                        <% end %>
                      <% else %>
                        <span class="w-8 h-8 flex items-center justify-center rounded-full bg-gray-100 text-gray-400 cursor-not-allowed">
                          <i class="fa-solid fa-plus text-xs"></i>
                        </span>
                      <% end %>
                    </div>
                    <div class="text-right">
                      <p class="text-sm text-gray-500 mb-1">小計</p>
                      <p class="text-xl font-bold text-gray-900">
                        <%= number_to_currency(cart_item.line_total, unit: "¥", strip_insignificant_zeros: true) %>
                      </p>
                    </div>
                    <%= link_to cart_item_path(cart_item), data: { "turbo-method": :delete, "turbo_confirm": 'この商品をカートから削除しますか？' }, class: "ml-4 p-2 text-red-500 hover:bg-red-50 rounded-lg transition-colors" do %>
                      <i class="fa-solid fa-trash-can"></i>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- 注文サマリー -->
        <div class="lg:col-span-1">
          <div class="bg-white rounded-xl shadow-xl p-6 border border-gray-100 sticky top-24">
            <h2 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
              <i class="fa-solid fa-receipt mr-2 text-orange-500"></i>
              注文サマリー
            </h2>
            
            <div class="space-y-4 mb-6">
              <div class="flex justify-between items-center py-2">
                <span class="text-gray-600">小計</span>
                <span class="text-lg font-semibold text-gray-900">
                  <%= number_to_currency(@total, unit: "¥", strip_insignificant_zeros: true) %>
                </span>
              </div>
              
              <div class="flex justify-between items-start py-2 border-t border-gray-200">
                <div>
                  <span class="text-gray-600">送料</span>
                  <p class="text-xs text-gray-500 mt-1">
                    <%= SiteSetting.free_shipping_threshold %>円以上で送料無料
                  </p>
                </div>
                <span class="text-lg font-semibold text-gray-900">
                  <%= number_to_currency(@shipping_fee, unit: "¥", strip_insignificant_zeros: true) %>
                </span>
              </div>
              
              <div class="flex justify-between items-center py-4 border-t-2 border-gray-300">
                <span class="text-xl font-bold text-gray-900">合計</span>
                <span class="text-2xl font-bold text-orange-600">
                  <%= number_to_currency(@total + @shipping_fee, unit: "¥", strip_insignificant_zeros: true) %>
                </span>
              </div>
            </div>

            <% unless customer_signed_in? %>
              <div class="mb-4 p-3 bg-blue-50 border border-blue-100 rounded-lg">
                <p class="text-sm text-blue-800">
                  <i class="fa-solid fa-circle-info mr-1"></i>
                  会員登録いただくと次回以降の購入が便利です
                </p>
                <%= link_to new_customer_registration_path, class: "text-sm font-medium text-blue-600 hover:text-blue-800 underline mt-1 inline-block" do %>
                  会員登録はこちら →
                <% end %>
              </div>
            <% end %>

            <%= button_to checkouts_path, data: { turbo: false }, class: "w-full bg-gradient-to-r from-orange-500 to-red-500 text-white font-semibold py-4 px-6 rounded-lg shadow-lg hover:shadow-xl transform hover:scale-[1.02] transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-offset-2 cursor-pointer text-lg flex items-center justify-center" do %>
              <i class="fa-solid fa-credit-card mr-2"></i>
              決済に進む
            <% end %>

            <div class="mt-4 text-center">
              <%= link_to products_path, class: "text-sm text-gray-600 hover:text-orange-600 transition-colors inline-flex items-center" do %>
                <i class="fa-solid fa-arrow-left mr-2"></i>
                買い物を続ける
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
