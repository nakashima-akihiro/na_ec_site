<div class="min-h-screen bg-gradient-to-br from-gray-50 via-white to-orange-50 pt-24 pb-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl mx-auto">
    <!-- パンくずリスト -->
    <nav class="mb-6">
      <%= link_to products_path, class: "text-sm text-gray-600 hover:text-orange-600 transition-colors inline-flex items-center" do %>
        <i class="fa-solid fa-home mr-2"></i>
        商品一覧
        <i class="fa-solid fa-chevron-right mx-2 text-gray-400"></i>
      <% end %>
      <span class="text-sm text-gray-900 font-medium"><%= @product.name %></span>
    </nav>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">
      <!-- 商品画像セクション -->
      <div class="order-2 lg:order-1">
        <div class="sticky top-24">
          <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-gray-100">
            <div class="relative aspect-square overflow-hidden bg-gray-100 group">
              <%= image_tag @product.image, 
                  class: "w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" %>
              <% if @product.stock <= 0 %>
                <div class="absolute inset-0 bg-black/60 flex items-center justify-center">
                  <span class="bg-red-600 text-white px-6 py-3 rounded-full text-lg font-bold shadow-lg">
                    SOLD OUT
                  </span>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- 商品情報セクション -->
      <div class="order-1 lg:order-2">
        <div class="bg-white rounded-2xl shadow-xl p-6 lg:p-8 border border-gray-100">
          <!-- 商品名 -->
          <h1 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4 leading-tight">
            <%= @product.name %>
          </h1>

          <!-- 価格 -->
          <div class="mb-6 pb-6 border-b border-gray-200">
            <div class="flex items-baseline gap-2">
              <span class="text-4xl lg:text-5xl font-bold text-gray-900">
                <%= number_to_currency(@product.price, unit: "¥", strip_insignificant_zeros: true) %>
              </span>
              <span class="text-sm text-gray-500">税込</span>
            </div>
          </div>

          <!-- 在庫ステータス -->
          <div class="mb-6">
            <% if @product.stock > 0 %>
              <div class="inline-flex items-center px-4 py-2 bg-green-50 border-2 border-green-200 rounded-full">
                <i class="fa-solid fa-check-circle text-green-600 mr-2"></i>
                <span class="text-green-700 font-semibold">
                  在庫あり
                </span>
                <span class="ml-2 text-sm text-green-600">
                  (<%= @product.stock %>個)
                </span>
              </div>
            <% else %>
              <div class="inline-flex items-center px-4 py-2 bg-red-50 border-2 border-red-200 rounded-full">
                <i class="fa-solid fa-xmark-circle text-red-600 mr-2"></i>
                <span class="text-red-700 font-semibold">
                  在庫なし
                </span>
              </div>
            <% end %>
          </div>

          <!-- 商品説明 -->
          <div class="mb-8">
            <h2 class="text-lg font-semibold text-gray-900 mb-3 flex items-center">
              <i class="fa-solid fa-info-circle text-orange-500 mr-2"></i>
              商品説明
            </h2>
            <p class="text-gray-700 leading-relaxed whitespace-pre-line">
              <%= @product.description %>
            </p>
          </div>

          <!-- カート追加フォーム -->
          <% if @product.stock > 0 %>
            <div class="space-y-4">
              <%= form_with model: @cart_item, data: { turbo: false }, class: "space-y-4" do |f| %>
                <%= f.hidden_field :product_id, value: @product.id %>
                <%= f.submit "カートに追加", 
                    class: "w-full bg-gradient-to-r from-orange-500 to-red-500 text-white font-semibold py-4 px-6 rounded-lg shadow-lg hover:shadow-xl transform hover:scale-[1.02] transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-offset-2 cursor-pointer text-lg flex items-center justify-center" do %>
                  <i class="fa-solid fa-cart-plus mr-2"></i>
                  カートに追加
                <% end %>
              <% end %>
            </div>
          <% else %>
            <button disabled class="w-full bg-gray-300 text-gray-500 font-semibold py-4 px-6 rounded-lg cursor-not-allowed text-lg">
              <i class="fa-solid fa-ban mr-2"></i>
              現在在庫がありません
            </button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
