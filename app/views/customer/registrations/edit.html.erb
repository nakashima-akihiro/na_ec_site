<div class="min-h-screen bg-gradient-to-br from-gray-50 via-white to-orange-50 pt-24 pb-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md mx-auto">
    <!-- ヘッダーセクション -->
    <div class="text-center mb-8">
      <div class="flex justify-center mb-4">
        <div class="w-16 h-16 bg-gradient-to-br from-orange-500 to-red-500 rounded-full flex items-center justify-center shadow-lg">
          <i class="fa-solid fa-user-gear text-white text-2xl"></i>
        </div>
      </div>
      <h1 class="text-3xl font-bold text-gray-900 mb-2">アカウント設定</h1>
      <p class="text-gray-600">プロフィール情報を編集できます</p>
    </div>

    <!-- フォームカード -->
    <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }, data: { turbo: false }) do |f| %>
        <%= render "customer/shared/error_messages", resource: resource %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="bg-yellow-50 border-2 border-yellow-200 rounded-lg p-4 mb-6">
            <p class="text-sm text-yellow-800">
              <i class="fa-solid fa-envelope-circle-check mr-2"></i>
              確認待ちのメールアドレス: <%= resource.unconfirmed_email %>
            </p>
          </div>
        <% end %>

        <!-- 名前フィールド -->
        <div>
          <%= f.label :name, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
            <i class="fa-solid fa-user mr-2 text-orange-500"></i>
            お名前
          <% end %>
          <%= f.text_field :name, 
              placeholder: "山田 太郎",
              class: "w-full rounded-lg border-2 border-gray-200 py-3 px-4 pl-10 text-gray-900 placeholder-gray-400 focus:border-orange-500 focus:outline-none focus:ring-2 focus:ring-orange-500/20 transition-all duration-200" %>
        </div>

        <!-- メールフィールド -->
        <div>
          <%= f.label :email, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
            <i class="fa-solid fa-envelope mr-2 text-orange-500"></i>
            メールアドレス
          <% end %>
          <%= f.email_field :email, 
              placeholder: "example@email.com",
              class: "w-full rounded-lg border-2 border-gray-200 py-3 px-4 pl-10 text-gray-900 placeholder-gray-400 focus:border-orange-500 focus:outline-none focus:ring-2 focus:ring-orange-500/20 transition-all duration-200" %>
        </div>

        <!-- パスワードフィールド（変更する場合のみ） -->
        <div>
          <%= f.label :password, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
            <i class="fa-solid fa-lock mr-2 text-orange-500"></i>
            新しいパスワード
          <% end %>
          <p class="mb-2 text-xs text-gray-500">変更しない場合は空欄のままにしてください</p>
          <%= f.password_field :password, 
              placeholder: "8文字以上",
              autocomplete: "new-password",
              class: "w-full rounded-lg border-2 border-gray-200 py-3 px-4 pl-10 text-gray-900 placeholder-gray-400 focus:border-orange-500 focus:outline-none focus:ring-2 focus:ring-orange-500/20 transition-all duration-200" %>
        </div>

        <!-- パスワード確認フィールド -->
        <div>
          <%= f.label :password_confirmation, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
            <i class="fa-solid fa-lock mr-2 text-orange-500"></i>
            パスワード（確認）
          <% end %>
          <%= f.password_field :password_confirmation, 
              placeholder: "パスワードを再入力",
              autocomplete: "new-password",
              class: "w-full rounded-lg border-2 border-gray-200 py-3 px-4 pl-10 text-gray-900 placeholder-gray-400 focus:border-orange-500 focus:outline-none focus:ring-2 focus:ring-orange-500/20 transition-all duration-200" %>
        </div>

        <!-- 現在のパスワードフィールド -->
        <div>
          <%= f.label :current_password, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
            <i class="fa-solid fa-shield-halved mr-2 text-orange-500"></i>
            現在のパスワード
          <% end %>
          <p class="mb-2 text-xs text-gray-500">変更を確認するために現在のパスワードが必要です</p>
          <%= f.password_field :current_password, 
              placeholder: "現在のパスワードを入力",
              autocomplete: "current-password",
              class: "w-full rounded-lg border-2 border-gray-200 py-3 px-4 pl-10 text-gray-900 placeholder-gray-400 focus:border-orange-500 focus:outline-none focus:ring-2 focus:ring-orange-500/20 transition-all duration-200" %>
        </div>

        <!-- 送信ボタン -->
        <%= f.submit "更新する", 
            class: "w-full bg-gradient-to-r from-orange-500 to-red-500 text-white font-semibold py-3.5 px-6 rounded-lg shadow-lg hover:shadow-xl transform hover:scale-[1.02] transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-offset-2 cursor-pointer" %>
      <% end %>
    </div>

    <!-- アカウント削除 -->
    <div class="mt-6 text-center">
      <%= link_to confirm_withdraw_customers_path, class: "text-sm text-red-600 hover:text-red-700 transition-colors inline-flex items-center" do %>
        <i class="fa-solid fa-trash-can mr-2"></i>
        アカウントを削除
      <% end %>
    </div>
  </div>
</div>
