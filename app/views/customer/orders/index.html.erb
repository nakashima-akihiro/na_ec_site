<div class="min-h-screen bg-gradient-to-br from-gray-50 via-white to-orange-50 pt-24 pb-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <!-- ヘッダーセクション -->
    <div class="text-center mb-8">
      <div class="flex justify-center mb-4">
        <div class="w-16 h-16 bg-gradient-to-br from-orange-500 to-red-500 rounded-full flex items-center justify-center shadow-lg">
          <i class="fa-solid fa-receipt text-white text-2xl"></i>
        </div>
      </div>
      <h1 class="text-3xl font-bold text-gray-900 mb-2">注文履歴</h1>
      <p class="text-gray-600">過去のご注文を確認できます</p>
    </div>

    <% if @orders.count == 0 %>
      <!-- 注文履歴なし -->
      <div class="bg-white rounded-2xl shadow-xl p-12 border border-gray-100 text-center">
        <div class="mb-6">
          <i class="fa-solid fa-clipboard-list text-6xl text-gray-300"></i>
        </div>
        <h2 class="text-2xl font-bold text-gray-900 mb-4">注文履歴がありません</h2>
        <p class="text-gray-600 mb-8">まだご注文がありません</p>
        <%= link_to products_path, class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-orange-500 to-red-500 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200" do %>
          <i class="fa-solid fa-pizza-slice mr-2"></i>
          商品を探す
        <% end %>
      </div>
    <% else %>
      <div class="space-y-4">
        <% @orders.each do |order| %>
          <%= link_to order_path(order), class: "block bg-white rounded-xl shadow-lg p-6 border border-gray-100 hover:shadow-xl transition-all duration-200 hover:scale-[1.01]" do %>
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-3">
                  <div class="flex items-center text-gray-600">
                    <i class="fa-solid fa-calendar mr-2 text-orange-500"></i>
                    <span class="text-sm font-medium"><%= l order.created_at, format: :short %></span>
                  </div>
                  <span class="px-3 py-1 bg-blue-100 text-blue-800 text-xs font-semibold rounded-full">
                    <%= order.status %>
                  </span>
                </div>
                <div class="space-y-1 text-sm text-gray-600">
                  <p><span class="font-medium">お名前:</span> <%= order.name %></p>
                  <p><span class="font-medium">郵便番号:</span> <%= order.postal_code %></p>
                  <p><span class="font-medium">住所:</span> <%= order.prefecture %> <%= order.address1 %> <%= order.address2 %></p>
                </div>
              </div>
              <div class="text-right">
                <p class="text-sm text-gray-500 mb-1">合計金額</p>
                <p class="text-3xl font-bold text-orange-600">
                  <%= number_to_currency(order.billing_amount, unit: "¥", strip_insignificant_zeros: true) %>
                </p>
                <div class="mt-3 inline-flex items-center text-sm text-orange-600">
                  <span>詳細を見る</span>
                  <i class="fa-solid fa-chevron-right ml-1"></i>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
