<div class="min-h-screen bg-gradient-to-br from-gray-50 via-white to-orange-50 pt-24 pb-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl mx-auto">
    <!-- ヘッダーセクション -->
    <div class="text-center mb-8">
      <div class="flex justify-center mb-4">
        <div class="w-16 h-16 bg-gradient-to-br from-orange-500 to-red-500 rounded-full flex items-center justify-center shadow-lg">
          <i class="fa-solid fa-file-invoice text-white text-2xl"></i>
        </div>
      </div>
      <h1 class="text-3xl font-bold text-gray-900 mb-2">注文詳細</h1>
      <p class="text-gray-600">
        <i class="fa-solid fa-calendar mr-2"></i>
        <%= l @order.created_at, format: :short %>
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 lg:gap-8">
      <!-- 注文商品一覧 -->
      <div class="lg:col-span-2 space-y-6">
        <div class="bg-white rounded-xl shadow-xl p-6 border border-gray-100">
          <h2 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
            <i class="fa-solid fa-box mr-2 text-orange-500"></i>
            注文商品
          </h2>
          <div class="space-y-6">
            <% @order.order_details.each do |order_detail| %>
              <%= link_to product_path(order_detail.product), class: "block hover:opacity-80 transition-opacity" do %>
                <div class="flex gap-4 pb-6 border-b border-gray-200 last:border-0">
                  <div class="flex-shrink-0">
                    <div class="w-24 h-24 rounded-lg overflow-hidden bg-gray-100">
                      <%= image_tag order_detail.product.image, class: "w-full h-full object-cover" %>
                    </div>
                  </div>
                  <div class="flex-1">
                    <h3 class="text-lg font-semibold text-gray-900 mb-2"><%= order_detail.product.name %></h3>
                    <div class="flex items-center justify-between">
                      <div class="space-y-1">
                        <p class="text-gray-600">
                          単価: <span class="font-semibold text-gray-900"><%= number_to_currency(order_detail.price, unit: "¥", strip_insignificant_zeros: true) %></span>
                        </p>
                        <p class="text-gray-600">
                          数量: <span class="font-semibold text-gray-900"><%= order_detail.quantity %></span>
                        </p>
                      </div>
                      <p class="text-xl font-bold text-orange-600">
                        <%= number_to_currency(order_detail.price * order_detail.quantity, unit: "¥", strip_insignificant_zeros: true) %>
                      </p>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>

      <!-- 注文情報サイドバー -->
      <div class="lg:col-span-1 space-y-6">
        <!-- 注文サマリー -->
        <div class="bg-white rounded-xl shadow-xl p-6 border border-gray-100">
          <h2 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
            <i class="fa-solid fa-calculator mr-2 text-orange-500"></i>
            注文サマリー
          </h2>
          <div class="space-y-4">
            <div class="flex justify-between py-2">
              <span class="text-gray-600">小計</span>
              <span class="font-semibold text-gray-900">
                <%= number_to_currency(@order.billing_amount - @order.postage, unit: "¥", strip_insignificant_zeros: true) %>
              </span>
            </div>
            <div class="flex justify-between py-2 border-t border-gray-200">
              <span class="text-gray-600">送料</span>
              <span class="font-semibold text-gray-900">
                <%= number_to_currency(@order.postage, unit: "¥", strip_insignificant_zeros: true) %>
              </span>
            </div>
            <div class="flex justify-between py-4 border-t-2 border-gray-300">
              <span class="text-lg font-bold text-gray-900">合計</span>
              <span class="text-2xl font-bold text-orange-600">
                <%= number_to_currency(@order.billing_amount, unit: "¥", strip_insignificant_zeros: true) %>
              </span>
            </div>
          </div>
        </div>

        <!-- 配送先住所 -->
        <div class="bg-white rounded-xl shadow-xl p-6 border border-gray-100">
          <h2 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
            <i class="fa-solid fa-truck mr-2 text-orange-500"></i>
            配送先住所
          </h2>
          <div class="space-y-2 text-sm text-gray-700">
            <p><span class="font-semibold">お名前:</span> <%= @order.name %></p>
            <p><span class="font-semibold">郵便番号:</span> <%= @order.postal_code %></p>
            <p><span class="font-semibold">都道府県:</span> <%= @order.prefecture %></p>
            <p><span class="font-semibold">市区町村:</span> <%= @order.address1 %></p>
            <% if @order.address2.present? %>
              <p><span class="font-semibold">番地・建物名:</span> <%= @order.address2 %></p>
            <% end %>
          </div>
        </div>

        <!-- 注文ステータス -->
        <div class="bg-white rounded-xl shadow-xl p-6 border border-gray-100">
          <h2 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
            <i class="fa-solid fa-info-circle mr-2 text-orange-500"></i>
            注文ステータス
          </h2>
          <div class="inline-flex items-center px-4 py-2 bg-blue-100 border-2 border-blue-200 rounded-full">
            <span class="text-blue-800 font-semibold"><%= @order.status %></span>
          </div>
        </div>

        <!-- 戻るボタン -->
        <div class="text-center">
          <%= link_to orders_path, class: "inline-flex items-center text-sm text-gray-600 hover:text-orange-600 transition-colors" do %>
            <i class="fa-solid fa-arrow-left mr-2"></i>
            注文履歴に戻る
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
