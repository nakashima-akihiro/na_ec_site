<div class="min-h-screen bg-gradient-to-br from-gray-50 via-white to-orange-50 pt-24 pb-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md mx-auto">
    <!-- ヘッダーセクション -->
    <div class="text-center mb-8">
      <div class="flex justify-center mb-4">
        <div class="w-16 h-16 bg-gradient-to-br from-orange-500 to-red-500 rounded-full flex items-center justify-center shadow-lg">
          <i class="fa-solid fa-right-to-bracket text-white text-2xl"></i>
        </div>
      </div>
      <h1 class="text-3xl font-bold text-gray-900 mb-2">ログイン</h1>
      <p class="text-gray-600">PIZZERIA La Cittáへようこそ</p>
    </div>

    <!-- フォームカード -->
    <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6", data: { turbo: false } } )  do |f| %>
        <%= render "customer/shared/error_messages", resource: resource %>
        
        <!-- メールフィールド -->
        <div>
          <%= f.label :email, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
            <i class="fa-solid fa-envelope mr-2 text-orange-500"></i>
            メールアドレス
          <% end %>
          <%= f.email_field :email, 
              placeholder: "example@email.com", 
              autocomplete: "email",
              class: "w-full rounded-lg border-2 border-gray-200 py-3 px-4 pl-10 text-gray-900 placeholder-gray-400 focus:border-orange-500 focus:outline-none focus:ring-2 focus:ring-orange-500/20 transition-all duration-200" %>
        </div>
        
        <!-- パスワードフィールド -->
        <div>
          <%= f.label :password, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
            <i class="fa-solid fa-lock mr-2 text-orange-500"></i>
            パスワード
          <% end %>
          <%= f.password_field :password, 
              placeholder: "パスワードを入力", 
              autocomplete: "current-password",
              class: "w-full rounded-lg border-2 border-gray-200 py-3 px-4 pl-10 text-gray-900 placeholder-gray-400 focus:border-orange-500 focus:outline-none focus:ring-2 focus:ring-orange-500/20 transition-all duration-200" %>
        </div>

        <!-- 送信ボタン -->
        <%= f.submit 'ログイン', 
            class: "w-full bg-gradient-to-r from-orange-500 to-red-500 text-white font-semibold py-3.5 px-6 rounded-lg shadow-lg hover:shadow-xl transform hover:scale-[1.02] transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-offset-2 cursor-pointer" %>
      <% end %>
    </div>

    <!-- リンクセクション -->
    <div class="mt-6 text-center space-y-3">
      <%= link_to new_customer_password_path, class: "text-sm text-gray-600 hover:text-orange-600 transition-colors inline-flex items-center" do %>
        <i class="fa-solid fa-key mr-2"></i>
        パスワードをお忘れですか？
      <% end %>
      <div class="pt-2">
        <p class="text-sm text-gray-600">
          アカウントをお持ちでない方は
          <%= link_to "新規登録", new_customer_registration_path, class: "font-semibold text-orange-600 hover:text-orange-700 transition-colors" %>
        </p>
      </div>
      <div class="mt-4">
        <%= render "customer/shared/links" %>
      </div>
    </div>
  </div>
</div>
