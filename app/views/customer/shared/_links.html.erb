<%- if controller_name != 'sessions' %>
  <%= link_to new_session_path(resource_name), class: "text-sm text-gray-600 hover:text-orange-600 transition-colors inline-flex items-center" do %>
    <i class="fa-solid fa-right-to-bracket mr-2"></i>
    ログイン
  <% end %>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to new_registration_path(resource_name), class: "text-sm text-gray-600 hover:text-orange-600 transition-colors inline-flex items-center" do %>
    <i class="fa-solid fa-user-plus mr-2"></i>
    新規登録
  <% end %>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to new_password_path(resource_name), class: "text-sm text-gray-600 hover:text-orange-600 transition-colors inline-flex items-center mt-2" do %>
    <i class="fa-solid fa-key mr-2"></i>
    パスワードをお忘れですか？
  <% end %>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to new_confirmation_path(resource_name), class: "text-sm text-gray-600 hover:text-orange-600 transition-colors inline-flex items-center mt-2" do %>
    <i class="fa-solid fa-envelope-circle-check mr-2"></i>
    確認メールが届かない場合
  <% end %>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to new_unlock_path(resource_name), class: "text-sm text-gray-600 hover:text-orange-600 transition-colors inline-flex items-center mt-2" do %>
    <i class="fa-solid fa-unlock mr-2"></i>
    アカウントロック解除
  <% end %>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to omniauth_authorize_path(resource_name, provider), method: :post, class: "text-sm text-gray-600 hover:text-orange-600 transition-colors inline-flex items-center mt-2" do %>
      <i class="fa-brands fa-<%= provider.to_s.downcase %> mr-2"></i>
      <%= OmniAuth::Utils.camelize(provider) %>でログイン
    <% end %>
  <% end %>
<% end %>
