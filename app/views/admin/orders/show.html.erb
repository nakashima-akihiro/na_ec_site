<div class="min-h-screen bg-gray-50 pt-24 pb-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <!-- ページヘッダー -->
    <div class="mb-8">
      <div class="flex items-center justify-between mb-4">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">注文詳細 #<%= @order.id %></h1>
          <div class="mt-2 flex items-center gap-4 text-sm text-gray-600">
            <span>作成日: <%= l @order.created_at, format: :short %></span>
            <span>更新日: <%= l @order.updated_at, format: :short %></span>
          </div>
        </div>
        <%= link_to admin_root_path, class: "text-sm text-gray-600 hover:text-gray-900 inline-flex items-center" do %>
          <i class="fa-solid fa-arrow-left mr-2"></i>
          ダッシュボードに戻る
        <% end %>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- 注文商品一覧 -->
      <div class="lg:col-span-2 space-y-6">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-6">注文商品</h2>
          <div class="space-y-6">
            <% @order.order_details.each do |order_detail| %>
              <div class="flex gap-4 pb-6 border-b border-gray-200 last:border-0">
                <div class="w-24 h-24 rounded-lg overflow-hidden bg-gray-100 flex-shrink-0">
                  <%= image_tag order_detail.product.image, class: "w-full h-full object-cover" %>
                </div>
                <div class="flex-1">
                  <h3 class="text-lg font-medium text-gray-900 mb-2"><%= order_detail.product.name %></h3>
                  <div class="flex items-center justify-between">
                    <div class="space-y-1 text-sm text-gray-600">
                      <p>単価: <%= number_to_currency(order_detail.price, unit: "¥", strip_insignificant_zeros: true) %></p>
                      <p>数量: <%= order_detail.quantity %></p>
                    </div>
                    <p class="text-lg font-semibold text-gray-900">
                      <%= number_to_currency(order_detail.price * order_detail.quantity, unit: "¥", strip_insignificant_zeros: true) %>
                    </p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <!-- 注文サマリー -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-6">注文サマリー</h2>
          <div class="space-y-4">
            <div class="flex justify-between py-2">
              <span class="text-gray-600">小計</span>
              <span class="font-medium text-gray-900">
                <%= number_to_currency(@order.billing_amount - @order.postage, unit: "¥", strip_insignificant_zeros: true) %>
              </span>
            </div>
            <div class="flex justify-between py-2 border-t border-gray-200">
              <span class="text-gray-600">送料</span>
              <span class="font-medium text-gray-900">
                <%= number_to_currency(@order.postage, unit: "¥", strip_insignificant_zeros: true) %>
              </span>
            </div>
            <div class="flex justify-between py-4 border-t-2 border-gray-300">
              <span class="text-lg font-semibold text-gray-900">合計</span>
              <span class="text-lg font-semibold text-gray-900">
                <%= number_to_currency(@order.billing_amount, unit: "¥", strip_insignificant_zeros: true) %>
              </span>
            </div>
          </div>
        </div>
      </div>

      <!-- サイドバー -->
      <div class="lg:col-span-1 space-y-6">
        <!-- 顧客情報 -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-6">顧客情報</h2>
          <div class="space-y-4">
            <div class="pb-4 border-b border-gray-200">
              <p class="text-sm text-gray-600 mb-1">お名前</p>
              <p class="font-medium text-gray-900"><%= @order.customer.name %></p>
            </div>
            <div class="pb-4 border-b border-gray-200">
              <p class="text-sm text-gray-600 mb-1">メールアドレス</p>
              <p class="font-medium text-gray-900"><%= @order.customer.email %></p>
            </div>
            <div>
              <p class="text-sm text-gray-600 mb-1">過去の注文数</p>
              <p class="font-medium text-gray-900"><%= @order.customer.orders.count %>件</p>
            </div>
          </div>
        </div>

        <!-- 配送先住所 -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-6">配送先住所</h2>
          <div class="space-y-2 text-sm text-gray-700">
            <p><span class="font-medium">お名前:</span> <%= @order.name %></p>
            <p><span class="font-medium">郵便番号:</span> <%= @order.postal_code %></p>
            <p><span class="font-medium">都道府県:</span> <%= @order.prefecture %></p>
            <p><span class="font-medium">市区町村:</span> <%= @order.address1 %></p>
            <% if @order.address2.present? %>
              <p><span class="font-medium">番地・建物名:</span> <%= @order.address2 %></p>
            <% end %>
          </div>
        </div>

        <!-- 注文ステータス -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-6">注文ステータス</h2>
          <div class="mb-6">
            <p class="text-sm text-gray-600 mb-2">現在のステータス</p>
            <span class="inline-flex items-center px-3 py-1 bg-blue-100 text-blue-800 text-sm font-medium rounded-full">
              <%= @order.status %>
            </span>
          </div>
          <%= form_with model: @order, url: admin_order_path(@order), local: true, class: "space-y-4" do |f| %>
            <div>
              <%= f.label :status, "ステータスを変更", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.select :status, Order.statuses.keys.to_a.map { |s| [s, s] }, {}, {class: "w-full bg-white border border-gray-300 text-sm rounded-lg focus:ring-gray-500 focus:border-gray-500 px-4 py-2"} %>
            </div>
            <%= f.submit "更新する", class: "w-full px-4 py-2 bg-gray-700 text-white rounded-lg hover:bg-gray-800 transition-colors text-sm font-medium cursor-pointer" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
