<div class="min-h-screen bg-gray-50 flex items-center justify-center px-4 py-12">
  <div class="w-full max-w-sm">
    <div class="bg-white border border-gray-200 p-8">
      <h1 class="text-xl font-semibold text-gray-900 mb-6">管理画面ログイン</h1>
      
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }, class: "space-y-4") do |f| %>
        <%= render "admin/shared/error_messages", resource: resource %>
        
        <div>
          <%= f.label :email, class: "block text-sm text-gray-700 mb-1" %>
          <%= f.email_field :email, 
              autofocus: true,
              autocomplete: "email",
              class: "w-full border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:border-gray-500" %>
        </div>
        
        <div>
          <%= f.label :password, class: "block text-sm text-gray-700 mb-1" %>
          <%= f.password_field :password, 
              autocomplete: "current-password",
              class: "w-full border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:border-gray-500" %>
        </div>
        
        <div class="pt-2">
          <%= f.submit "ログイン", class: "w-full bg-gray-800 text-white px-4 py-2 text-sm hover:bg-gray-900 cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
