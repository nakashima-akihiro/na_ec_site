<div class="min-h-screen bg-gray-50 pt-24 pb-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <!-- ページヘッダー -->
    <div class="mb-8 flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">商品管理</h1>
        <p class="mt-2 text-gray-600">商品の一覧と管理</p>
      </div>
      <%= link_to new_admin_product_path, class: "inline-flex items-center px-4 py-2 bg-gray-700 text-white rounded-lg hover:bg-gray-800 transition-colors text-sm font-medium" do %>
        <i class="fa-solid fa-plus mr-2"></i>
        新規商品追加
      <% end %>
    </div>

    <!-- 商品一覧テーブル -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">商品画像・名前</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">価格</th>
              <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">在庫</th>
              <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">作成日</th>
              <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">更新日</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @products.each do |product| %>
              <tr class="hover:bg-gray-50 transition-colors">
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= link_to admin_product_path(product), class: "flex items-center hover:text-gray-900" do %>
                    <div class="w-16 h-16 rounded-lg overflow-hidden bg-gray-100 mr-4 flex-shrink-0">
                      <%= image_tag product.image, class: "w-full h-full object-cover" %>
                    </div>
                    <div class="text-sm font-medium text-gray-900"><%= product.name %></div>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900">
                    <%= number_to_currency(product.price, unit: "¥", strip_insignificant_zeros: true) %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-center">
                  <div class="text-sm text-gray-900"><%= product.stock %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-center">
                  <div class="text-sm text-gray-500"><%= l product.created_at, format: :short %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-center">
                  <div class="text-sm text-gray-500"><%= l product.updated_at, format: :short %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right">
                  <div class="flex items-center justify-end gap-3">
                    <%= link_to edit_admin_product_path(product), class: "text-sm text-gray-600 hover:text-gray-900 font-medium" do %>
                      編集
                    <% end %>
                    <%= link_to admin_product_path(product), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "text-sm text-red-600 hover:text-red-800 font-medium" do %>
                      削除
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
