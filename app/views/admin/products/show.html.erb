<div class="min-h-screen bg-gray-50 pt-24 pb-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl mx-auto">
    <!-- ページヘッダー -->
    <div class="mb-8">
      <div class="flex items-center justify-between mb-4">
        <h1 class="text-3xl font-bold text-gray-900">商品詳細</h1>
        <%= link_to admin_products_path, class: "text-sm text-gray-600 hover:text-gray-900 inline-flex items-center" do %>
          <i class="fa-solid fa-arrow-left mr-2"></i>
          商品一覧に戻る
        <% end %>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- 商品画像 -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
        <div class="aspect-square bg-gray-100">
          <%= image_tag @product.image, class: "w-full h-full object-cover" %>
        </div>
      </div>

      <!-- 商品情報 -->
      <div class="space-y-6">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-2xl font-bold text-gray-900 mb-4"><%= @product.name %></h2>
          
          <div class="mb-6 pb-6 border-b border-gray-200">
            <div class="flex items-baseline gap-2">
              <span class="text-3xl font-bold text-gray-900">
                <%= number_to_currency(@product.price, unit: "¥", strip_insignificant_zeros: true) %>
              </span>
              <span class="text-sm text-gray-500">税込</span>
            </div>
          </div>

          <div class="mb-6">
            <% if @product.stock > 0 %>
              <span class="inline-flex items-center px-3 py-1 bg-blue-100 text-blue-800 text-sm font-medium rounded-full">
                <i class="fa-solid fa-check-circle mr-2"></i>
                在庫あり (<%= @product.stock %>)
              </span>
            <% else %>
              <span class="inline-flex items-center px-3 py-1 bg-red-100 text-red-800 text-sm font-medium rounded-full">
                <i class="fa-solid fa-xmark-circle mr-2"></i>
                在庫なし
              </span>
            <% end %>
          </div>

          <div class="mb-6">
            <h3 class="text-sm font-medium text-gray-700 mb-2">商品説明</h3>
            <p class="text-gray-900 whitespace-pre-line"><%= @product.description %></p>
          </div>

          <div class="flex gap-3">
            <%= link_to edit_admin_product_path(@product), class: "flex-1 inline-flex items-center justify-center px-4 py-2 bg-gray-700 text-white rounded-lg hover:bg-gray-800 transition-colors text-sm font-medium" do %>
              <i class="fa-solid fa-pencil mr-2"></i>
              編集
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
