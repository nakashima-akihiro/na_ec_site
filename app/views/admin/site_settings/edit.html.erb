<div class="min-h-screen bg-gray-50 pt-24 pb-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl mx-auto">
    <!-- ページヘッダー -->
    <div class="mb-8">
      <div class="flex items-center justify-between mb-4">
        <h1 class="text-3xl font-bold text-gray-900"><%= t('admin.site_settings.title') %></h1>
        <%= link_to admin_root_path, class: "text-sm text-gray-600 hover:text-gray-900 inline-flex items-center" do %>
          ダッシュボードに戻る
        <% end %>
      </div>
      <p class="text-gray-600"><%= t('admin.site_settings.description') %></p>
    </div>

    <!-- フォーム -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
      <%= form_with model: @site_setting, url: admin_site_settings_path, method: :patch, local: true, data: { turbo: false }, class: "space-y-6" do |f| %>
        <%= render "admin/shared/error_messages", resource: @site_setting %>

        <div>
          <%= f.label :postage, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.number_field :postage, 
              min: 0,
              step: 1,
              placeholder: "500",
              class: "w-full rounded-lg border border-gray-300 py-2.5 px-4 text-gray-900 placeholder-gray-400 focus:border-gray-500 focus:outline-none focus:ring-1 focus:ring-gray-500 transition-colors" %>
          <p class="mt-1 text-xs text-gray-500"><%= t('admin.site_settings.postage_hint') %></p>
        </div>

        <div>
          <%= f.label :free_shipping_threshold, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.number_field :free_shipping_threshold, 
              min: 0,
              step: 1,
              placeholder: "5000",
              class: "w-full rounded-lg border border-gray-300 py-2.5 px-4 text-gray-900 placeholder-gray-400 focus:border-gray-500 focus:outline-none focus:ring-1 focus:ring-gray-500 transition-colors" %>
          <p class="mt-1 text-xs text-gray-500"><%= t('admin.site_settings.free_shipping_threshold_hint') %></p>
        </div>

        <div class="pt-4 border-t border-gray-200">
          <%= f.submit t('helpers.submit.update'), class: "w-full inline-flex items-center justify-center px-6 py-3 bg-gray-700 text-white font-medium rounded-lg hover:bg-gray-800 transition-colors cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
