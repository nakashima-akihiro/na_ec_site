  <script>
    // ドロップダウンメニューの制御
    (function() {
      let dropdownHandlers = {
        toggle: null,
        outside: null,
        link: null
      };
      
      function toggleDropdown(event) {
        const button = event.target.closest('.dropdown-toggle');
        if (!button) return;
        
        event.preventDefault();
        event.stopPropagation();
        
        const dropdown = button.closest('.dropdown');
        if (!dropdown) return;
        
        const isOpen = dropdown.classList.contains('open');
        
        // 全てのドロップダウンを閉じる
        document.querySelectorAll('.dropdown').forEach(function(d) {
          d.classList.remove('open');
        });
        
        // クリックしたドロップダウンを開く/閉じる
        if (!isOpen) {
          dropdown.classList.add('open');
        }
      }
      
      function closeDropdownsOnOutsideClick(event) {
        const clickedDropdown = event.target.closest('.dropdown');
        document.querySelectorAll('.dropdown').forEach(function(dropdown) {
          if (dropdown !== clickedDropdown) {
            dropdown.classList.remove('open');
          }
        });
      }
      
      function closeDropdownOnLinkClick(event) {
        const link = event.target.closest('.dropdown-menu a');
        if (link) {
          const dropdown = link.closest('.dropdown');
          if (dropdown) {
            setTimeout(function() {
              dropdown.classList.remove('open');
            }, 100);
          }
        }
      }
      
      // イベントリスナーの設定
      function setupDropdowns() {
        // 既存のイベントリスナーを削除
        if (dropdownHandlers.toggle) {
          document.removeEventListener('click', dropdownHandlers.toggle, true);
        }
        if (dropdownHandlers.outside) {
          document.removeEventListener('click', dropdownHandlers.outside);
        }
        if (dropdownHandlers.link) {
          document.removeEventListener('click', dropdownHandlers.link);
        }
        
        // 新しいイベントリスナーを設定
        dropdownHandlers.toggle = toggleDropdown;
        dropdownHandlers.outside = closeDropdownsOnOutsideClick;
        dropdownHandlers.link = closeDropdownOnLinkClick;
        
        document.addEventListener('click', dropdownHandlers.toggle, true);
        document.addEventListener('click', dropdownHandlers.outside);
        document.addEventListener('click', dropdownHandlers.link);
      }
      
      // 初期化
      function init() {
        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', setupDropdowns);
        } else {
          setupDropdowns();
        }
      }
      
      init();
      
      // Turbo対応
      document.addEventListener('turbo:load', setupDropdowns);
      document.addEventListener('turbo:render', setupDropdowns);
      document.addEventListener('turbo:frame-load', setupDropdowns);
    })();
  </script>
